---
layout: base
title: Blog
eleventyNavigation:
  key: Home
  order: 1
---
<h1>Blog</h1>
{% set postslistCounter = collections.posts | length %}
<ol reversed class="posts">
  {% for post in collections.posts | reverse %}
    <li class="post">
      <a href="{{ post.url | url }}" class="postlist-link">
        <h3>
          {% if post.data.title %}{{ post.data.title }}
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}
        </h3>
      </a>
      <time class="post-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    </li>
  {% endfor %}
</ol>